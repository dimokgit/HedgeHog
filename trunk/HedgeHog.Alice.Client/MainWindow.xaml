<Window x:Class="HedgeHog.Alice.Client.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:m="clr-namespace:HedgeHog.Alice.Client"
        Title="MainWindow" Height="350" Width="525">
  <Window.Resources>
    <m:TraderModel x:Key="DataModel"/>
  </Window.Resources>
    <Grid DataContext="{StaticResource DataModel}">
    <DataGrid AutoGenerateColumns="True" VerticalScrollBarVisibility="Hidden" HorizontalScrollBarVisibility="Hidden" ItemsSource="{Binding ServerTradesList}" />
  </Grid>
</Window>
